# ===========================================
# DATABASE CONFIGURATION
# ===========================================
# MongoDB connection string
# Format: mongodb+srv://username:password@cluster.mongodb.net/database?options
# For local MongoDB: mongodb://localhost:27017/drb-vehicles
MONGO_URI=mongodb+srv://username:password@cluster.mongodb.net/?appName=YourApp

# ===========================================
# SERVER CONFIGURATION
# ===========================================
# Port on which the application will run
PORT=3000

# ===========================================
# JWT AUTHENTICATION
# ===========================================
# Secret key for signing JWT access tokens
# Generate a strong random string (e.g., using: node -e "console.log(require('crypto').randomBytes(32).toString('hex'))")
JWT_SECRET=your_super_secret_jwt_key_change_this_in_production

# Secret key for signing JWT refresh tokens
# Should be different from JWT_SECRET
JWT_REFRESH_SECRET=your_super_secret_refresh_token_key_change_this_in_production

# Access token expiration time
# Examples: 15m, 1h, 2h, 1d
JWT_EXPIRATION=1h

# Refresh token expiration time
# Examples: 7d, 14d, 30d
REFRESH_TOKEN_EXPIRATION=7d